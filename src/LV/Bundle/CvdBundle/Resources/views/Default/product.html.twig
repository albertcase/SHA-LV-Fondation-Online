	var femaleCoatHtml =  $.map(female,function(v,k){
		return '<div class="swiper-slide"><div class="products" id="'+k+'"><ul><li class="current"><img src="/images/cvd/pro/female/'+k+'/'+k+'-1.png" width="100%" /><p>'+v[0]+'</p></li><li><img src="/images/cvd/pro/female/'+k+'/'+k+'-2.png" width="100%" /><p>'+v[1]+'</p></li><li><img src="/images/cvd/pro/female/'+k+'/'+k+'-3.png" width="100%" /><p>'+v[2]+'</p></li><li><img src="/images/cvd/pro/female/'+k+'/'+k+'-4.png" width="100%" /><p>'+v[3]+'</p></li></ul></div></div>';
		num++;
