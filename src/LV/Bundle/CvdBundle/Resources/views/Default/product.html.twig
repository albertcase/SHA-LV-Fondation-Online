	function getType(){
		var str = window.location.pathname;
		var pos = "female";

		if(str.indexOf('product/female') > 0){
			pos = "female"
		}else{
			pos = "male"
		}

		return pos;
	}

	if(getType() == "female"){
		$(".swiper-wrapper").html(femaleCoatHtml);
		$(".gomore").attr("href","http://www.louisvuitton.cn/zhs-cn/women/gift-inspirations/timeless-pieces?campaign=m_2015cvd/women");
	}else{
		$(".swiper-wrapper").html(maleCoatHtml);
		$(".gomore").attr("href","http://www.louisvuitton.cn/zhs-cn/men/gift-inspirations/timeless-pieces?campaign=m_2015cvd/men");
	}

	

	// 0 accessories   1 bags   2 shoe   3 watch

	var swiper = new Swiper('.swiper-container', {
	    nextButton: '.swiper-button-next',
	    prevButton: '.swiper-button-prev',
	    effect : 'coverflow',
	    slidesPerView: 1,
		centeredSlides: true,
	    coverflow: {
            rotate: 100,
            stretch: 30,
            depth: 20,
            modifier: 1,
            slideShadows : false
        }
	});

	$(".products li").click(function(){
		var prevCur = $(this).siblings("li.current");
		$(prevCur).insertAfter($(this).siblings("li").eq(2));
		$(this).siblings("li").removeClass("current");
		$(this).insertBefore($(this).siblings("li").eq(0)).addClass("current");
	})




	$(function(){

