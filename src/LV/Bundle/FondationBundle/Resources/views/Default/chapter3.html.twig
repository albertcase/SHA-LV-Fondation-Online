		$(".glassBlock_tips").html("安装完成");
		$(".goonSearch").css("display","inline-block");
		$(".glass_footer").animate({"bottom":"1em","opacity":1});
	});
})

$(".goonSearch").click(function(){
	$(".glassInstall").fadeOut();
	$(".glassInstall_info").show().animate({"opacity":1},3000);
})


