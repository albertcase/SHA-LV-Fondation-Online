<script type="text/javascript">

$(".glassBlock").click(function(){
	$(this).fadeOut("300");
	$(".glass_footer").animate({"bottom":0,"opacity":0});
	$(".glassInstall_fin").animate({"opacity":1},1000,function(){
		$(".glassInstall_con h2").html("路易威登基金会");
