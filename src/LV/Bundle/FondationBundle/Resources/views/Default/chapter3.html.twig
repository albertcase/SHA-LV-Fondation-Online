<script type="text/javascript">

$(".glassBlock").click(function(){
	$(this).animate({"opacity":0.1,"margin-top":"9em"},600,function(){
		$(this).hide();

		$(".glass_footer").animate({"bottom":0,"opacity":0},600,function(){
			$(".glassBlock_tips").hide();
		});
		$(".glassInstall_fin").animate({"opacity":1},1000,function(){
			$(".glassInstall_con h2").html("路易威登基金会");
			$(".glassInfo").fadeIn();
			$(".glassBlock_tips").html("安装完成");
			$(".goonSearch").css("display","inline-block");
			$(".glass_footer").animate({"bottom":"1.6em","opacity":1});
		});
	});
	
})

$(".goonSearch").click(function(){
