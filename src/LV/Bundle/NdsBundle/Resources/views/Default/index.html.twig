    <div class="mod-orient-layer__content">
        <i class="icon mod-orient-layer__icon-orient"></i>
        <div class="mod-orient-layer__desc">为了更好的体验，请使用竖屏浏览</div>
    </div>
</div>

<script type="text/javascript">
    function isPhoneNum(value){
		return /^0?(13[0-9]|15[012356789]|18[012356789]|14[57])[0-9]{8}$/.test(value);
	}

	function isIdCard(value){
		return /^\d{6}(18|19|20)?\d{2}(0[1-9]|1[12])(0[1-9]|[12]\d|3[01])\d{3}(\d|X)$/i.test(value);
	}

	isIdCard("430524199108148197")

	$(".submit_btn").click(function(){
		if($(this).hasClass("disable")) return false;
		var _name = $("input[name='name']").val();
		var _tel = $("input[name='tel']").val();
		var _sex = $("select[name='sex'] option:selected").text();  // $("input[name='sex']").val();select
		var _city = $("input[name='city']").val();
		var _id_card = $("input[name='id_card']").val();
		var pcb = $(".agreeInput").is(':checked');


		if(_name == "" || !_name){
			alert("请填写姓名");
			return false;
		}else if(!isPhoneNum(_tel)){
			alert("请填写正确的手机号码");
			return false;
		}else if(_sex == "请选择"||_sex == ""){
			alert("请选择性别");
			return false;
		}else if(_city == ""){
			alert("请填写城市");
			return false;
		}else if(!isIdCard(_id_card)){
			alert("请填写身份证信息");
		}else if(!pcb){
			alert("请阅读“活动细则”并勾选");
		}else{
			var submitVal = {
			    	"name": _name,
			    	"mobile": _tel,
			    	"sex": _sex,
			    	"city": _city,
			    	"idcard": _id_card
			    }
			$(".submit_btn").addClass("disable").find("em").html("提交中..");
			submitForm(submitVal);
			//console.log(_name+":"+_tel);
		}
	})




	function changePage(cp){
		$(".fpage").hide();
		$("#"+cp).css("display","inline-block");
	}

	
function submitForm(value){
	$.ajax({
	    type: "POST",
	    url: "{{ url('lv_nds_api') }}",
	    data: value,
	    dataType:"json"
    }).done(function(data){
    	$(".successPup").show();
    	$(".submit_btn").removeClass("disable").find("em").html("提交");
    });
}
	


</script>

{% endblock %}